<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>b3s__Demand_Cannot_Be_Assigned</fullName>
    <active>true</active>
    <description>A shift demand itself may not be assigned to a person.</description>
    <errorConditionFormula>b3s__Required_Staff__c &gt; 1 &amp;&amp; NOT(ISBLANK(b3s__Contact__c))</errorConditionFormula>
    <errorDisplayField>b3s__Contact__c</errorDisplayField>
    <errorMessage>A shift demand cannot be assigned to a contact record</errorMessage>
</ValidationRule>
