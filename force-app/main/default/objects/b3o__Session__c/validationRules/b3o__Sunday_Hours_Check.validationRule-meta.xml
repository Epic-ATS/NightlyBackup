<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>b3o__Sunday_Hours_Check</fullName>
    <active>true</active>
    <errorConditionFormula>OR((NOT(ISBLANK(b3o__Sunday_Start__c)) &amp;&amp; ISBLANK(b3o__Sunday_End__c)), (ISBLANK(b3o__Sunday_Start__c) &amp;&amp; NOT(ISBLANK(b3o__Sunday_End__c))))</errorConditionFormula>
    <errorDisplayField>b3o__Sunday_End__c</errorDisplayField>
    <errorMessage>You must provide both Start and End Time or leave both fields blank to indicate that this day is not available for booking.</errorMessage>
</ValidationRule>
